{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": [
			"node",
			"vite/client",
			"@intlify/unplugin-vue-i18n/messages",
			"unplugin-vue-router/client"
		],
		"outDir": "../../dist/out-tsc"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.vue",
		"**/typed-router.d.ts"
	],
	"exclude": [
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.vue",
		"src/**/*.test.vue",
		"vite.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx"
	]
}
