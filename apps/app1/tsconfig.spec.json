{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": [
			"@testing-library/jest-dom",
			"vitest/globals",
			"vitest/importMeta",
			"vite/client",
			"node",
			"vitest"
		],
		"outDir": "../../dist/out-tsc"
	},
	"include": [
		"vite.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx",
		"src/**/*.d.ts"
	]
}
